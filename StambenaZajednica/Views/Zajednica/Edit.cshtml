@model StambZajednica

@{
    ViewData["Title"] = "Izmeni zajednicu";
}

<h2>Izmeni zajednicu</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adresa"></label>
        <input asp-for="Adresa" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">Sačuvaj izmene</button>
</form>
<a asp-action="Index">Nazad</a>
