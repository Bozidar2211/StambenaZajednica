@model StambZajednica

@{
    ViewData["Title"] = "Dodaj zajednicu";
}

<h2>Dodaj stambenu zajednicu</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adresa"></label>
        <input asp-for="Adresa" class="form-control" />
    </div>
    <div class="form-group">
        <label for="BrojZgrade">Broj Zgrade</label>
        <input type="text" class="form-control" id="BrojZgrade" name="BrojZgrade" required />
    </div>
    <button type="submit" class="btn btn-success">Sačuvaj</button>
</form>
<a asp-action="Index">Nazad</a>
